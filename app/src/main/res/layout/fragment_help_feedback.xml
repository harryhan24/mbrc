<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.helpfeedback.HelpFeedbackFragment">

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/feedback_tab_layout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:background="@color/primary"
      android:textColor="@color/primary_text_material_light"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tabSelectedTextColor="@color/primary_text_material_light"
      app:tabTextColor="@color/secondary_text_material_light" />

  <androidx.viewpager.widget.ViewPager
      android:id="@+id/pager_help_feedback"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/feedback_tab_layout" />

</androidx.constraintlayout.ConstraintLayout>
